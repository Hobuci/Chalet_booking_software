<Window x:Class="Presentation.CarHireDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation"
        mc:Ignorable="d"
        Title="CarHireDetails" Height="166.525" Width="252.33" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="txtb_driverName" HorizontalAlignment="Left" Height="23" Margin="14,10,0,0" TextWrapping="Wrap" Text="Driver Name" VerticalAlignment="Top" Width="160" GotFocus="txtb_driverName_GotFocus" LostFocus="txtb_driverName_LostFocus"/>
        <DatePicker x:Name="datepicker_carHireStart" HorizontalAlignment="Left" Margin="15,72,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="datepicker_carHireEnd" HorizontalAlignment="Left" Margin="130,72,0,0" VerticalAlignment="Top"/>
        <Label Content="Start Date                   End Date" HorizontalAlignment="Left" Margin="11,52,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_saveCarHire" Content="Save Details" HorizontalAlignment="Left" Margin="85,106,0,0" VerticalAlignment="Top" Width="75" Click="btn_saveCarHire_Click"/>
    </Grid>
</Window>
